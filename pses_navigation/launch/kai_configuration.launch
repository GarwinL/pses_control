<launch>
    <arg name="depth_image" default="/kinect2/sd/image_depth_rect"/>

    <node pkg="depthimage_to_laserscan" type="depthimage_to_laserscan" name="depthimage_to_laserscan" output="screen">
            <remap from="image" to="$(arg depth_image)"/>
    </node>

    <node pkg="pses_odometry" type="odometry_node" name="odometry_node" output="screen">
    </node>

    <node pkg="pses_transform" type="pses_transform_tf_broadcaster" name="tf_broadcaster" output="screen">
    </node>

    <node pkg="pses_transform" type="pses_transform_tf_listener" name="tf_listener" output="screen">
    </node>


</launch>
